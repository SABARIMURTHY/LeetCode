// User function Template for Java
class Solution {
    static boolean armstrongNumber(int n) {
        // code here
        int length=Integer.toString(n).length();
        int sum=0;
        int num=n;
        while(num>0){
            int rem=num%10;
            sum=sum+(int)Math.pow(rem,length);
            num=num/10;
        }
        if(n==sum){
            return true;
        }
        return false;
    }
}
